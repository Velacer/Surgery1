@page "/counter"

<h1>Counter</h1>
<p>@firstNumber</p>
<input style="margin-bottom:15px" inputmode="numeric" @bind-value="firstNumber"/>
<p>@secondNumber</p>
<input style="margin-bottom:15px" inputmode="numeric" @bind-value="secondNumber" />

<p>@result</p>

<button @onclick="Sum">+</button>
<button @onclick="Razn">-</button>
<button @onclick="Multiple">*</button>
<button @onclick="Divide">/</button>
<h1 style="color:red">@errorMessage</h1>
@code{
    private string firstNumber { get; set; } = "First number";
    private string secondNumber { get; set; } = "Second number";
    private int result { get; set; } = 0;
    private void Sum()
    {
        var firstNumberResult = 0;
        var secondNumberResult = 0;
        if (int.TryParse(firstNumber, out firstNumberResult) & int.TryParse(secondNumber, out secondNumberResult))
        {
            result = firstNumberResult + secondNumberResult;
            errorMessage = " ";
        }
        else
        {
            errorMessage = "aboba";
        }
    }
    private void Razn()
    {
        var firstNumberResult = 0;
        var secondNumberResult = 0;
        if (int.TryParse(firstNumber, out firstNumberResult) & int.TryParse(secondNumber, out secondNumberResult))
        {
            result = firstNumberResult - secondNumberResult;
            errorMessage = " ";
        }
        else
        {
            errorMessage = "aboba";
        }
    }
    private void Multiple()
    {
        var firstNumberResult = 0;
        var secondNumberResult = 0;
        if (int.TryParse(firstNumber, out firstNumberResult) & int.TryParse(secondNumber, out secondNumberResult))
        {
            result = firstNumberResult * secondNumberResult;
            errorMessage = " ";
        }
        else
        {
            errorMessage = "aboba";
        }
    }
    private void Divide()
    {
        var firstNumberResult = 0;
        var secondNumberResult = 0;
        if (int.TryParse(firstNumber, out firstNumberResult) & int.TryParse(secondNumber, out secondNumberResult))
        {
            result = firstNumberResult / secondNumberResult;
            errorMessage = " ";
        }
        else
        {
            errorMessage = "aboba";
        }
    }
    private string errorMessage { get; set; } = "";
}